{
  "family": "txtai-rag-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "arn:aws:iam::076656108307:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::076656108307:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "txtai-rag-backend",
      "image": "076656108307.dkr.ecr.us-east-1.amazonaws.com/txtai-rag-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "AWS_S3_BUCKET",
          "value": "ragaws-documents-076656108307"
        },
        {
          "name": "AWS_DYNAMODB_TABLE",
          "value": "rag-metadata"
        },
        {
          "name": "TXTAI_INDEX_PATH",
          "value": "/mnt/efs/txtai_index"
        },
        {
          "name": "TXTAI_MODEL",
          "value": "sentence-transformers/all-MiniLM-L6-v2"
        },
        {
          "name": "BEDROCK_MODEL_ID",
          "value": "anthropic.claude-v2"
        },
        {
          "name": "TOP_K_RESULTS",
          "value": "5"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "txtai-index",
          "containerPath": "/mnt/efs/txtai_index",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/txtai-rag-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "volumes": [
    {
      "name": "txtai-index",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0e0f887e5d38f643c",
        "rootDirectory": "/",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-054d2107160eaf5ea",
          "iam": "ENABLED"
        }
      }
    }
  ]
}

